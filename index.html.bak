<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>versionCode Downloader</title>
    <script>
        let isRunning = false;

        async function checkStatus() {
            const response = await fetch('https://raw.githubusercontent.com/faizul118/moinkraft/main/status.txt');
            const status = await response.text();
            isRunning = status.trim() === 'true';
            document.getElementById('isRunning').innerText = isRunning ? 'TRUE' : 'FALSE';
            document.getElementById('isRunning').style.color = isRunning ? 'green' : 'red';
        }

        async function fetchVersion() {
            const result = document.getElementById('result');
            const warning = document.getElementById('warning');
            warning.innerHTML = ''; // Clear previous warning

            if (!isRunning) {
                warning.innerHTML = 'Error: versionDownloader is not active right now. Ask the creator to turn it on.';
                return;
            }

            const versionCodeInput = document.getElementById('versionCode');
            const versionCode = versionCodeInput.value.trim();

            if (versionCode === '') {
                warning.innerHTML = 'Error: versionCode can not be empty.';
                return;
            }

            if (!/^\d+$/.test(versionCode)) {
                warning.innerHTML = 'Error: Enter valid versionCode.';
                return;
            }

            const response = await fetch('https://api.github.com/repos/mcpebd/mcpebd/releases');
            const releases = await response.json();

            const asset = releases.flatMap(release => release.assets).find(asset => asset.name.includes(versionCode));
            if (asset) {
                result.innerHTML = `
                    <button onclick="window.location.href='${asset.browser_download_url}'">
                        Download ${asset.name}
                    </button>
                `;
            } else {
                warning.innerHTML = 'No matching version found.';
            }
        }

        window.onload = checkStatus;
    </script>
</head>
<body>
    <h1>versionCode Downloader</h1>
    Born on 20240713_1350<br>
    Last updated:
    <p>isRunning: <span id="isRunning"><code>Loading...</code></span></p>
    
    <input type="text" id="versionCode" placeholder="versionCode">
    <button onclick="fetchVersion()">Search</button><br><br>
    <div id="warning" style="color: red;"></div>
    <div id="result"></div>
